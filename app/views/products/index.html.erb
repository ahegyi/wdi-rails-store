<h1>Store</h1>

<table class="table table-striped table-condensed">
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th>Number of Reviews</th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><strong><%= link_to product.name, product %></strong> (<%= link_to "Edit", edit_product_path(product) %>)</td>
    <td><%= number_to_currency(product.price) %></td>
    <td><span class="label"><%= product.reviews.count > 0 ? pluralize(product.reviews.count, "review") : "" %></span></td>
    <td><a href="/reviews/new?product_id=<%= product.id %>">New Review</a></td>
    <td><%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Product', new_product_path %>
