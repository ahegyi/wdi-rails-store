<h1>Listing products</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th>Number of Reviews</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= link_to product.name, product %></td>
    <td><%= number_to_currency(product.price) %></td>
    <td><%= product.reviews.count > 0 ? pluralize(product.reviews.count, "review") : "" %></td>
    <td><a href="/reviews/new?product_id=<%= product.id %>">New Review</a></td>
    <td><%= link_to "Edit #{product.name}", edit_product_path(product) %></td>
    <td><%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Product', new_product_path %>
